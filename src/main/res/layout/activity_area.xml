<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgm"
    tools:context=".area">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Area"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/enterarea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/enterarea"
        android:layout_width="103dp"
        android:layout_height="50dp"
        android:layout_marginBottom="68dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/sqtohec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/actohec"
        android:layout_width="111dp"
        android:layout_height="33dp"
        android:layout_marginBottom="388dp"
        android:background="@drawable/shape"
        android:textColor="@color/light_white"
        android:text="Acre-Hectare"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sqtohec"
        app:layout_constraintHorizontal_bias="0.581"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="272dp"
        android:layout_height="238dp"
        android:layout_marginBottom="68dp"
        android:alpha="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/area"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sqtohec"
        android:layout_width="111dp"
        android:layout_height="33dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="388dp"
        android:background="@drawable/shape"
        android:textColor="@color/light_white"
        android:text="Sq/m-Hec"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/hectoac" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sqtoacre"
        android:layout_width="111dp"
        android:layout_height="33dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="148dp"
        android:background="@drawable/shape"
        android:textColor="@color/light_white"
        android:text="Sq/m-Acre"
        android:textSize="10dp"
        app:layout_constraintBottom_toTopOf="@+id/sqtohec"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hectoac"
        android:layout_width="111dp"
        android:layout_height="33dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="388dp"
        android:background="@drawable/shape"
        android:textColor="@color/light_white"
        android:text="Hect-Acre"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/result5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sqtoacre"
        app:layout_constraintVertical_bias="0.818" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/actosq"
        android:layout_width="111dp"
        android:layout_height="33dp"
        android:layout_marginTop="208dp"
        android:text="Acre-Sq/m"
        android:textSize="10dp"
        android:background="@drawable/shape"
        android:textColor="@color/light_white"
        app:layout_constraintEnd_toStartOf="@+id/sqtoacre"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hectosq"
        android:layout_width="111dp"
        android:layout_height="33dp"
        android:layout_marginTop="208dp"
        android:text="Hectare-Sq/m"
        android:textSize="10dp"
        android:background="@drawable/shape"
        android:textColor="@color/light_white"
        app:layout_constraintBottom_toTopOf="@+id/hectoac"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sqtoacre"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>