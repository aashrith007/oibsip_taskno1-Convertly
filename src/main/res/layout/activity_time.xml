<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgm"
    tools:context=".Time">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Time"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/entertime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/entertime"
        android:layout_width="103dp"
        android:layout_height="50dp"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/mtosec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sectohr"
        android:layout_width="111dp"
        android:layout_height="33dp"
        android:layout_marginBottom="388dp"
        android:text="Sec To Hr"
        android:background="@drawable/shape"
        android:textColor="@color/light_white"

        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mtohr"
        app:layout_constraintHorizontal_bias="0.581"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="272dp"
        android:layout_height="238dp"
        android:layout_marginBottom="68dp"
        android:alpha="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/timee"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mtohr"
        android:layout_width="111dp"
        android:layout_height="33dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="388dp"
        android:background="@drawable/shape"
        android:textColor="@color/light_white"
        android:text="Min to Hr"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/hrtomin" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mtosec"
        android:layout_width="111dp"
        android:layout_height="33dp"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="68dp"
        android:background="@drawable/shape"
        android:textColor="@color/light_white"
        android:text="Min To Sec"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/mtohr"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hrtomin"
        android:layout_width="111dp"
        android:layout_height="33dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="388dp"
        android:background="@drawable/shape"
        android:textColor="@color/light_white"
        android:text="Hr to min"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/result3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mtosec"
        app:layout_constraintVertical_bias="0.59" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sectom"
        android:layout_width="111dp"
        android:layout_height="33dp"
        android:layout_marginTop="208dp"
        android:text="Sec to Min"
        android:textSize="12dp"
        android:background="@drawable/shape"
        android:textColor="@color/light_white"
        app:layout_constraintEnd_toStartOf="@+id/mtosec"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hrtosec"
        android:layout_width="111dp"
        android:layout_height="33dp"
        android:layout_marginTop="208dp"
        android:text="Hr To Sec"
        android:textSize="12dp"
        android:background="@drawable/shape"
        android:textColor="@color/light_white"
        app:layout_constraintBottom_toTopOf="@+id/hrtomin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/mtosec"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>